{% extends 'FrontBundle::base.html.twig' %}

{% set user = app.security.getToken().getUser() %}
{% set credentials = app.security.getToken().getCredentials() %}

{% block css %}
<style>
.profile {font-size: 16px;}
.pdb1 {padding-bottom: 1%;}
.mt2 {margin-top: 2%;}
</style>
{% endblock %}

{% block page_title %}
Assignment - Profile Page
{% endblock %}

{% block content %}
<div class="col-sm-12 profile">
    <div class="col-sm-10">
        <div class="col-sm-12">
            <div class="col-sm-10 pdb1">
                <div class="col-sm-2">Name</div>
                <div class="col-sm-7 col-sm-offset-1">{{ user.firstName }} {{ user.lastName }}</div>
            </div>
        </div>
        <div class="col-sm-12">
            <div class="col-sm-2 mt2">
                <a href="{{ path('user_profile_edit') }}"><button class="btn-block razer-bttn" type="button">Edit</button></a>
            </div>
        </div>
    </div>
</div>
{% endblock %}